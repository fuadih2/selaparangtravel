{
  "name": "selaparang-travel-pro",
  "version": "2.0.0",
  "description": "Aplikasi Manajemen Selaparang Travel",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist:win": "electron-builder --win"
  },
  "keywords": [],
  "author": "Mulyadi",
  "license": "ISC",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "@electron/remote": "^2.0.12",
    "better-sqlite3": "^8.7.0",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.selaparangtravel.pro",
    "productName": "Selaparang Travel",
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
